<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp">

    <TextView
        android:id="@+id/login_member_chat_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:background="@drawable/chat_balloon"
        android:layout_gravity="right"
        android:layout_marginEnd="8dp"
        android:padding="8dp"
        android:text="안녕aaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaa"
        android:textSize="16sp"
        android:textColor="#000000"/>

    <TextView
        android:id="@+id/login_member_chat_time_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:text="19. 7. 14 14시 31분"
        android:textSize="8sp"/>

    <LinearLayout
        android:id="@+id/chatbot_info_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/chatbot_img_iv"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="8dp"
            android:src="@drawable/robot_icon"/>

        <TextView
            android:id="@+id/chatbot_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_gravity="center_vertical"
            android:textStyle="bold"
            android:textColor="#000000"
            android:text="Real Trip Bot"/>

    </LinearLayout>

    <TextView
        android:id="@+id/chatbot_chat_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/chat_balloon2"
        android:padding="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="100dp"
        android:text="안녕aaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaa"
        android:textSize="16sp"
        android:textColor="#000000"/>

    <TextView
        android:id="@+id/chatbot_chat_time_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:text="19. 7. 14 14시 31분"
        android:textSize="8sp"/>

</LinearLayout>