<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_margin="4dp"
    android:orientation="vertical"
    android:background="#eeeeee"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="4dp">

    <ImageView
        android:id="@+id/board_img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxHeight="200dp"
        android:adjustViewBounds="true"
        android:src="@drawable/view3"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_margin="8dp">

        <ImageView
            android:id="@+id/board_write_member_profile_img_iv"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/default_profile" />

        <TextView
            android:id="@+id/board_write_member_nickname_tv"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text=""
            android:textColor="#000000"
            android:textSize="10sp"
            android:textStyle="bold" />

    </LinearLayout>

        <TextView
            android:id="@+id/board_content_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:text=""
            android:textSize="14sp"
            android:textColor="#000000"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:gravity="right">

        <ImageView
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:src="@drawable/red_hart" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:text="29개"
            android:textColor="#000000"
            android:textSize="8sp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_marginStart="16dp"
            android:src="@drawable/reply_icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:text="12개"
            android:textColor="#000000"
            android:textSize="8sp"
            android:textStyle="bold" />

    </LinearLayout>

        <TextView
            android:id="@+id/board_write_time_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="8dp"
            android:text=""
            android:textSize="10sp"/>

</LinearLayout>